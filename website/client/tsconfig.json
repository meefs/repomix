{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {"*": ["./*"]},
    "types": ["vite/client", "vitepress/client"]
  },
  "include": [
    ".vitepress/**/*.ts", 
    ".vitepress/**/*.d.ts", 
    ".vitepress/**/*.tsx", 
    ".vitepress/**/*.vue",
    "components/**/*.ts",
    "components/**/*.vue",
    "composables/**/*.ts",
    "utils/**/*.ts",
    "constants/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
